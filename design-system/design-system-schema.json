
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ZacHunter Design System",
    "version": "1.0.0",
    "description": "Design system for Zac Hunter's UX portfolio",
    "lastUpdated": "2025-01-05",
    
    "foundations": {
      "colors": {
        "primary": {
          "blue": { "value": "#225CED", "variable": "--primary-blue", "description": "Primary brand blue" },
          "skyblue": { "value": "#5898F9", "variable": "--primary-skyblue", "description": "Secondary blue for accents" },
          "pink": { "value": "#DA4DF0", "variable": "--primary-pink", "description": "Primary brand pink" },
          "green": { "value": "#3CA24B", "variable": "--primary-green", "description": "Primary brand green" },
          "orange": { "value": "#E6772B", "variable": "--primary-orange", "description": "Primary brand orange" }
        },
        "light": {
          "blue": { "value": "#E5EDFF", "variable": "--light-blue", "description": "Light blue background" },
          "pink": { "value": "#F8CDFF", "variable": "--light-pink", "description": "Light pink background" },
          "green": { "value": "#B8F1C0", "variable": "--light-green", "description": "Light green background" },
          "orange": { "value": "#FFE4D1", "variable": "--light-orange", "description": "Light orange background" }
        },
        "lightest": {
          "blue": { "value": "#F3F7FF", "variable": "--lightest-blue", "description": "Lightest blue for subtle highlights" },
          "pink": { "value": "#FCE8FF", "variable": "--lightest-pink", "description": "Lightest pink for subtle highlights" },
          "green": { "value": "#DCF9E0", "variable": "--lightest-green", "description": "Lightest green for subtle highlights" },
          "orange": { "value": "#FFF1E6", "variable": "--lightest-orange", "description": "Lightest orange for subtle highlights" }
        },
        "functional": {
          "text-dark": { "value": "#1a1a1a", "variable": "--text-dark", "description": "Primary text color" },
          "text-light": { "value": "#999797", "variable": "--text-light", "description": "Secondary text color" },
          "border-gray": { "value": "#C9C7C7", "variable": "--border-gray", "description": "Border and divider color" },
          "bg-light": { "value": "#fefefe", "variable": "--bg-light", "description": "Light background color" },
          "btn-hover": { "value": "#4A4A4A", "variable": "--btn-hover", "description": "Button hover background" }
        }
      },
      
      "typography": {
        "families": {
          "primary": { "name": "Figtree", "variable": "--font-primary", "description": "Primary sans-serif font" },
          "accent": { "name": "Roboto Serif", "variable": "--font-accent", "description": "Accent serif font for headlines" }
        },
        "scale": {
          "hero-primary": { 
            "class": "hero-primary",
            "description": "Main hero headlines (Figtree 500)",
            "size": "clamp(2.5rem, 5vw, 3rem)",
            "lineHeight": "1.1",
            "letterSpacing": "-0.03em"
          },
          "hero-accent": { 
            "class": "hero-accent",
            "description": "Main hero headlines (Roboto Serif 500)",
            "size": "clamp(2.5rem, 5vw, 3rem)",
            "lineHeight": "1.1",
            "letterSpacing": "-0.03em"
          },
          "header1-primary": { 
            "class": "header1-primary",
            "description": "Primary section headers",
            "size": "clamp(1.75rem, 4vw, 2.125rem)",
            "lineHeight": "1.2",
            "letterSpacing": "-0.025em",
            "weight": "600"
          },
          "header2-primary": { 
            "class": "header2-primary",
            "description": "Secondary headers (Figtree)",
            "size": "clamp(1.25rem, 3vw, 1.5rem)",
            "lineHeight": "1.3",
            "letterSpacing": "-0.015em",
            "weight": "600"
          },
          "header2-accent": { 
            "class": "header2-accent",
            "description": "Secondary headers (Roboto Serif)",
            "size": "clamp(1.25rem, 3vw, 1.5rem)",
            "lineHeight": "1.3",
            "weight": "450"
          },
          "header3-primary": { 
            "class": "header3-primary",
            "description": "Tertiary headers",
            "size": "clamp(1.125rem, 2.5vw, 1.5rem)",
            "lineHeight": "1.3",
            "letterSpacing": "-0.015em",
            "weight": "600"
          },
          "body-primarylrg": { 
            "class": "body-primarylrg",
            "description": "Large body text",
            "size": "clamp(1.125rem, 2vw, 1.25rem)",
            "lineHeight": "clamp(1.75rem, 3vw, 2rem)",
            "weight": "450"
          },
          "body-primary-bold": { 
            "class": "body-primary-bold",
            "description": "Bold body text",
            "size": "clamp(1rem, 2vw, 1.125rem)",
            "lineHeight": "clamp(1.5rem, 3vw, 1.75rem)",
            "letterSpacing": "0.025em",
            "weight": "600"
          },
          "body-primary": { 
            "class": "body-primary",
            "description": "Standard body text",
            "size": "clamp(1rem, 2vw, 1.125rem)",
            "lineHeight": "clamp(1.5rem, 3vw, 1.75rem)",
            "letterSpacing": "0.025em"
          },
          "btn-label": { 
            "class": "btn-label",
            "description": "Button text",
            "size": "clamp(1rem, 2vw, 1.125rem)",
            "weight": "500",
            "letterSpacing": "0.015rem"
          },
          "metric-lrg": { 
            "class": "metric-lrg",
            "description": "Large metric numbers",
            "size": "clamp(2.5rem, 8vw, 3.75rem)",
            "lineHeight": "1.1",
            "letterSpacing": "-0.02em",
            "weight": "500"
          },
          "caption-spaced": { 
            "class": "caption-spaced",
            "description": "Spaced uppercase captions",
            "size": "clamp(0.75rem, 1.5vw, 0.875rem)",
            "letterSpacing": "0.2em",
            "wordSpacing": "0.25em",
            "weight": "700",
            "textTransform": "uppercase"
          },
          "quote": { 
            "class": "quote",
            "description": "Large quote text",
            "size": "clamp(1.75rem, 5vw, 3.25rem)",
            "lineHeight": "1.2",
            "weight": "400"
          }
        }
      },
      
      "spacing": {
        "scale": ["4px", "8px", "12px", "16px", "24px", "32px", "48px", "64px", "96px", "128px"],
        "responsivePattern": "clamp(min, preferred, max)",
        "commonPatterns": {
          "sectionPadding": "clamp(2rem, 6vw, 4rem)",
          "cardPadding": "clamp(1rem, 3vw, 1.25rem)",
          "buttonPadding": "clamp(0.5rem, 2vw, 0.75rem) clamp(1rem, 3vw, 1.5rem)",
          "gapSmall": "clamp(0.5rem, 2vw, 1rem)",
          "gapMedium": "clamp(1rem, 3vw, 1.5rem)",
          "gapLarge": "clamp(2rem, 5vw, 3rem)"
        }
      },
      
      "effects": {
        "border-radius": { "value": "16px", "variable": "--border-radius" },
        "shadow": { "value": "0 4px 24px rgba(0,0,0,0.08)", "variable": "--shadow" },
        "transition": { "value": "all 0.3s ease", "variable": "--transition" }
      }
    },
    
    "components": {
      "layout": {
        "container": {
          "class": "container",
          "description": "Main content container (1200px max)",
          "maxWidth": "1200px",
          "padding": "0 clamp(1rem, 4vw, 2rem)",
          "usage": "Use for all page sections, centers content"
        },
        "main-page": {
          "class": "main-page",
          "description": "Narrower container for case studies (975px max)",
          "maxWidth": "975px",
          "padding": "0 clamp(1rem, 3vw, 1.5rem)",
          "usage": "Case study main content, about page"
        },
        "grid-2-2": {
          "class": "grid-2-2",
          "description": "2x2 responsive grid",
          "gridTemplateColumns": "minmax(0, 1fr) minmax(0, 1fr)",
          "gridTemplateRows": "minmax(0, 1fr) minmax(0, 1fr)",
          "gap": "1rem",
          "usage": "Metric grids, comparison layouts"
        },
        "cards-3": {
          "class": "cards-3",
          "description": "3-card responsive layout",
          "mobile": "flex-direction: column",
          "desktop": "flex-direction: row",
          "gap": "clamp(1rem, 2vw, 1.5rem)",
          "maxWidth": "1040px",
          "usage": "Research overview cards, feature sets"
        },
        "basic-section": {
          "class": "basic-section",
          "description": "Standard section wrapper",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "gap": "clamp(1rem, 3vw, 1.5rem)",
          "margin": "0 16px",
          "usage": "All case study sections, about page sections"
        }
      },
      
      "cards": {
        "card": {
          "class": "card",
          "description": "Base card component",
          "background": "white",
          "border": "2px solid var(--border-gray)",
          "borderRadius": "var(--border-radius)",
          "padding": "clamp(1rem, 3vw, 1.25rem)",
          "display": "flex",
          "flexDirection": "column",
          "gap": "1rem",
          "children": {
            "hero-card": { "class": "hero-card", "flex": "1" },
            "stat-card": { "class": "stat-card", "description": "Hero stat cards" },
            "project-card": { 
              "class": "project-card",
              "description": "Project thumbnail card",
              "height": "clamp(300px, 50vw, 425px)",
              "border": "solid var(--border-gray) 1px",
              "backgroundSize": "cover",
              "backgroundPosition": "center"
            }
          }
        }
      },
      
      "buttons": {
        "btn": {
          "class": "btn",
          "description": "Pill-shaped button",
          "display": "inline-flex",
          "alignItems": "center",
          "justifyContent": "center",
          "padding": "clamp(0.5rem, 2vw, 0.75rem) clamp(1rem, 3vw, 1.5rem)",
          "borderRadius": "50px",
          "minHeight": "44px",
          "transition": "var(--transition)",
          "variants": {
            "primary": {
              "class": "btn-primary",
              "background": "var(--text-dark)",
              "color": "white"
            },
            "secondary": {
              "class": "btn-secondary",
              "background": "white",
              "color": "var(--text-dark)",
              "border": "1px solid var(--border-gray)"
            }
          },
          "hover": "background-color: var(--btn-hover); color: white;"
        },
        "btn-square": {
          "class": "btn-square",
          "description": "Square button for case studies",
          "borderRadius": "8px",
          "padding": "clamp(0.5rem, 2vw, 0.75rem) clamp(1rem, 3vw, 1.5rem)",
          "minHeight": "44px",
          "usage": "Case study demo links, external links"
        }
      },
      
      "navigation": {
        "navbar": {
          "class": "navbar",
          "description": "Sticky navigation bar",
          "position": "sticky",
          "top": "0",
          "zIndex": "1000",
          "background": "white",
          "borderBottom": "1px solid var(--border-gray)",
          "structure": {
            "wrapper": { "class": "name-links-div", "maxWidth": "1600px", "padding": "0 clamp(1rem, 4vw, 2rem)" },
            "logo": { "class": "name-div" },
            "links": { "class": "nav-links", "gap": "clamp(0.5rem, 2vw, 1rem)" },
            "link": { 
              "class": "nav-link",
              "active": { "class": "nav-link-active", "color": "var(--text-dark)", "borderBottom": "2px solid var(--text-dark)" }
            }
          }
        }
      },
      
      "images": {
        "basic-image": {
          "class": "basic-image",
          "description": "Standard responsive image",
          "width": "100%",
          "maxWidth": "1240px",
          "height": "auto",
          "marginBottom": "clamp(4rem, 8vw, 6rem)"
        },
        "image-help": {
          "class": "image-help",
          "description": "Image with shadow and border",
          "borderRadius": "8px",
          "border": "solid 2px var(--border-gray)",
          "boxShadow": "0 2.8px 2.2px rgba(0, 0, 0, 0.02), 0 6.7px 5.3px rgba(0, 0, 0, 0.028), 0 12.5px 10px rgba(0, 0, 0, 0.035), 0 22.3px 17.9px rgba(0, 0, 0, 0.042), 0 24px 24.4px rgba(0, 0, 0, 0.05), 0 64px 44px rgba(0, 0, 0, 0.07)"
        },
        "image-caption": {
          "class": "image-caption",
          "description": "Image caption text",
          "fontFamily": "var(--font-primary), sans-serif",
          "fontSize": "clamp(0.8rem, 1.5vw, 0.875rem)",
          "lineHeight": "1.5",
          "textAlign": "center",
          "marginBottom": "0.5rem",
          "maxWidth": "1240px",
          "padding": "0 1rem"
        },
        "case-header-img": {
          "class": "case-header-img",
          "description": "Full-width case study header image",
          "width": "100%",
          "height": "auto",
          "marginBottom": "clamp(2rem, 6vw, 4rem)",
          "borderBottom": "1px var(--border-gray) solid"
        }
      },
      
      "typography": {
        "highlight-text": {
          "class": "highlight-text",
          "description": "Animated text highlight",
          "display": "inline",
          "position": "relative",
          "padding": "clamp(2px, 1vw, 4px) clamp(1px, 0.5vw, 2px)",
          "borderRadius": "4px",
          "transition": "background-size 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease",
          "variants": {
            "combo-blue": { "class": "combo-blue", "background": "var(--light-blue)", "highlightedColor": "var(--primary-blue)" },
            "combo-green": { "class": "combo-green", "background": "var(--light-green)", "highlightedColor": "var(--primary-green)" },
            "combo-orange": { "class": "combo-orange", "background": "var(--light-orange)", "highlightedColor": "var(--primary-orange)" },
            "combo-pink": { "class": "combo-pink", "background": "var(--light-pink)", "highlightedColor": "var(--primary-pink)" },
            "combo-blue-light": { "class": "combo-blue-light", "background": "var(--lightest-blue)", "highlightedColor": "var(--primary-blue)" },
            "combo-green-light": { "class": "combo-green-light", "background": "var(--lightest-green)", "highlightedColor": "var(--primary-green)" },
            "combo-orange-light": { "class": "combo-orange-light", "background": "var(--lightest-orange)", "highlightedColor": "var(--primary-orange)" },
            "combo-pink-light": { "class": "combo-pink-light", "background": "var(--lightest-pink)", "highlightedColor": "var(--primary-pink)" }
          },
          "highlighted": {
            "class": "highlighted",
            "backgroundSize": "100% 100%",
            "transform": "translateY(-1px)"
          }
        },
        "static-highlight": {
          "classPrefix": "statichighlight-",
          "variants": {
            "orange": { "class": "statichighlight-orange", "color": "var(--primary-orange)" },
            "blue": { "class": "statichighlight-blue", "color": "var(--primary-blue)" },
            "green": { "class": "statichighlight-green", "color": "var(--primary-green)" },
            "pink": { "class": "statichighlight-pink", "color": "var(--primary-pink)" }
          }
        }
      }
    },
    
    "patterns": {
      "caseStudy": {
        "description": "Standard case study structure",
        "requiredSections": [
          { "name": "Header", "components": [".case-header-img", ".case-titles"], "required": true },
          { "name": "Summary & Duties", "components": [".summary-duties"], "required": true },
          { "name": "Introduction", "components": ["#intro", ".text-block"], "required": true }
        ],
        "contentSections": [
          { "name": "Research", "components": [".cards-3", ".grid-2-2"], "optional": true },
          { "name": "Design", "components": [".image-text", ".image-text-full"], "optional": true },
          { "name": "Results", "components": [".comparison-table"], "optional": true }
        ],
        "example": "calendar-app.html"
      },
      
      "homePage": {
        "description": "Home page structure",
        "requiredSections": [
          { "name": "Hero", "components": [".hero", ".hero-content", ".hero-cards"], "required": true },
          { "name": "Projects", "components": [".projects", ".project-card-container"], "required": true }
        ],
        "example": "index.html"
      },
      
      "aboutPage": {
        "description": "About page structure",
        "requiredSections": [
          { "name": "Header", "components": [".case-titles"], "required": true },
          { "name": "Two Column Layout", "components": [".about-container", ".about-column"], "required": true }
        ],
        "example": "about.html"
      }
    },
    
    "constraints": {
      "css": {
        "noInlineStyles": true,
        "noHardcodedColors": true,
        "useClampForSpacing": true,
        "mobileFirst": true
      },
      "html": {
        "semanticElements": true,
        "ariaLabelsRequired": true,
        "minTouchTarget": "44px",
        "responsiveImages": true
      },
      "content": {
        "followPatterns": true,
        "useHighlightText": true,
        "consistentMetricsFormat": true
      }
    }
  }